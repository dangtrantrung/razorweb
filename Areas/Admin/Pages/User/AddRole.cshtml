@page "/admin/assign-role/{id}"
@model App.Admin.User.AddRoleModel
@{
    ViewData["Title"] = "Gán role";
   
    
}

<h3>Thiết lập role cho User: @Model.user.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />
@{
   @*  List<string> roleName= new List<string> ()
        {
            "Phan A",
            "Phan B",
            "Phan C"
        };
    var allRoles= new SelectList(roleName); *@
}
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <label asp-for="RoleNames" class="form-label"></label>
                @Html.ListBoxFor(m=>m.RoleNames,@Model.allRoles, new{
                    id="id-select-roles",
                    @class="w-100"
                })

                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <hr>
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-primary">Danh sách thành viên</a>
        </form>
        <hr>
        <p> Các Claim của user có được từ role:</p>
        @if(Model.claimsInRole.Count>0)
        {
            <ul>
                 @foreach (var cinrole in Model.claimsInRole)
                 {
                  <li> @cinrole.ClaimType : @cinrole.ClaimValue</li>   
                 }

            </ul>
        }
        <p> Các Claim riêng của user:
        <a asp-page="./EditUserRoleClaim" asp-page-handler="AddClaim" asp-route-userid=@Model.user.Id> + Thêm claim riêng</a>
        </p>
        @if(Model.claimsInUserClaim.Count>0)
        {
            <ul>
                 @foreach (var cinrole in Model.claimsInUserClaim)
                 {
                  <li> 
                       <a asp-page="./EditUserRoleClaim" asp-page-handler="EditClaim" asp-route-claimid=@cinrole.Id>@cinrole.ClaimType : @cinrole.ClaimValue</a>
                      
                </li>   
                 }

            </ul>
        }
    </div>
</div>

    @* multiple-select *@

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css"/>
    <script>
        
        $("#id-select-roles").multipleSelect(
            {
               selectAll:false,
               keepOpen:false,
               isOpen:true,
               
            });
            
    </script>
    <partial name="_ValidationScriptsPartial" />
}
