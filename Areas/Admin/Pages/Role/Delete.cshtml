@page "/admin/delete-role/{roleid}"
@model App.Admin.Role.DeleteModel
@{
    
}
<h2> Xóa Role </h2>
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <p>Bạn có chắc chắn muốn xóa role <strong>@Model.RoleName</strong></p>

            <div class="form-group">
                <input type="submit" value="Đồng ý Xóa role" class="btn btn-danger" />
                  <a class="btn btn-primary" asp-page="./Index">Danh sách các roles</a>
            </div>
           
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}